{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "target": "ES2017",
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"],
      "@schemas/*": ["schemas/*"],
      "@db/*": ["db/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"],
      "@repositories": ["repositories/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*"
  ]
}
