{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "target": "ES2016",
    "baseUrl": "./src/",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
      "@errors/*": ["errors/*"],
      "@factories/*": ["factories/*"],
      "@middlewares/*": ["middlewares/*"],
      "@schemas/*": ["models/schemas*"],
      "@types/*": ["models/types/*"],
      "@repositories/*": ["repositories/*"],
      "@routers/*": ["routers/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
